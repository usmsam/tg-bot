{
  "compilerOptions": {
    "outDir": "./", // Папка, куда будут скомпилированы файлы
    "rootDir": "./src", // Папка, откуда будут браться исходные файлы
    "target": "ES6", // Целевая версия JavaScript
    "module": "commonjs", // Модульная система Node.js
    "strict": true, // Включить строгий режим TypeScript
    "esModuleInterop": true // Поддержка ES-модулей
  },
  "include": [
    "src/**/*.ts",
    "bot.ts"
  ], // Указываем путь к TypeScript файлам
  "exclude": [
    "node_modules"
  ] // Исключаем папку node_modules
}